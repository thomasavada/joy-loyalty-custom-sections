            /**
             * Translation helper function - replicates i18n from @avada/functions
             */
            i18n(key, translation = {}, params = {}) {
                // Helper to strip [[...]] prefix
                const stripPrefix = (str) => {
                    return typeof str === 'string' ? str.replace(/\[\[(.*?)\]\]/g, '') : str;
                };

                // Get initial string: check translation object first, then use stripped key as fallback
                let text = (translation && translation.hasOwnProperty(key) && translation[key]) || stripPrefix(key);

                // If no params, return text as is
                if (!params || Object.keys(params).length === 0) {
                    return text || '';
                }

                // If we have params but the text doesn't contain any placeholders,
                // it means the translation gave us a shortened version - use the original key instead
                const textHasPlaceholders = /\{\{.*?\}\}/.test(text);
                const keyHasPlaceholders = /\{\{.*?\}\}/.test(key);

                if (!textHasPlaceholders && keyHasPlaceholders) {
                    // Original key has placeholders but translated text doesn't - use original key
                    text = stripPrefix(key);
                }

                // Replace placeholders with actual values
                Object.keys(params).forEach(paramKey => {
                    const value = params[paramKey];
                    if (value !== undefined && value !== null) {
                        // Create regex pattern that matches {{key}} with optional spaces: {{key}} or {{ key }}
                        const pattern = new RegExp('\\{\\{\\s*' + paramKey + '\\s*\\}\\}', 'g');
                        text = String(text).replace(pattern, String(value));
                    }
                });

                return text || '';
            }

