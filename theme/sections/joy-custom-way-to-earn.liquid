        // Fallback to URL if available
        if (program.urlAtLoyaltyPage) {
          window.open(program.urlAtLoyaltyPage, '_blank');
          return;
        }

        if (program.link) {
          const cleanUrl = program.link.replace(/^https?:\/\//, '');
          window.open(`https://${cleanUrl}`, '_blank');
          return;
